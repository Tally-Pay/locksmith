  },
  "dependencies": {
    "@solana/kit": "^2.1.0"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@solana/kit": "^2.0.0"
  },
  "keywords": [
    "solana",
    "token",
    "lock",
    "vesting",
    "spl"
  ],
  "license": "MIT"
}
