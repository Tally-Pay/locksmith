{
  "name": "@locksmith/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for the Locksmith token locking program",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
